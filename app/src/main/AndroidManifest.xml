<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anrikuwen.mydiary">

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".mainactivity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".diaryfragment.DiaryActivity" />
        <activity android:name=".mynotes.NotesActivity" />
        <activity
            android:name=".diaryfragment.DiaryProjectRecItemActivity"
            android:theme="@style/ProjectRecItem" />
        <activity android:name=".diaryfragment.DiaryProjectChangeActivity"></activity>
    </application>

</manifest>