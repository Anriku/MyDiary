<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_diary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/diary_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@mipmap/toolbar"
        app:tabIndicatorColor="@color/gray"
        app:tabIndicatorHeight="@dimen/tab_indicator_height"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/light_green"
        app:tabTextAppearance="@style/DiaryTabSizeAppearance"
        app:tabTextColor="@color/red" />

    <android.support.v4.view.ViewPager
        android:id="@+id/diary_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
