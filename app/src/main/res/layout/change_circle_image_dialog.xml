<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@color/gray"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/change_circle_image_dialog_take_photo_image"
            android:layout_width="@dimen/circle_dialog_image_size"
            android:layout_height="@dimen/circle_dialog_image_size"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin"
            android:src="@mipmap/ic_take_photo" />

        <ImageView
            android:id="@+id/change_circle_image_dialog_choose_from_album_image"
            android:layout_width="@dimen/circle_dialog_image_size"
            android:layout_height="@dimen/circle_dialog_image_size"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin"
            android:src="@mipmap/ic_choose_from_album" />
    </LinearLayout>

</LinearLayout>