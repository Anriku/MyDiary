<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_twice"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_twice">

        <TextView
            android:id="@+id/diary_project_rec_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:gravity="center"
            android:textSize="@dimen/text_view_text_size" />

        <TextView
            android:id="@+id/diary_project_rec_month"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/diary_project_rec_year"
            android:layout_margin="@dimen/margin" />

        <TextView
            android:id="@+id/diary_project_rec_day"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/diary_project_rec_month"
            android:layout_margin="@dimen/margin" />

        <TextView
            android:id="@+id/diary_project_rec_week_day"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/diary_project_rec_year"
            android:layout_margin="@dimen/margin"
            android:layout_toRightOf="@id/diary_project_rec_month" />

        <TextView
            android:id="@+id/diary_project_rec_time"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/diary_project_rec_week_day"
            android:layout_margin="@dimen/margin"
            android:layout_toRightOf="@id/diary_project_rec_day" />

        <TextView
            android:id="@+id/diary_project_rec_title"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/diary_project_rec_year"
            android:layout_toRightOf="@id/diary_project_rec_week_day"
            android:textSize="@dimen/text_view_text_size_min" />

        <ImageView
            android:id="@+id/diary_project_rec_mood"
            android:layout_width="@dimen/image_dimen"
            android:layout_height="@dimen/image_dimen"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin" />

        <ImageView
            android:id="@+id/diary_project_rec_weather"
            android:layout_width="@dimen/image_dimen"
            android:layout_height="@dimen/image_dimen"
            android:layout_margin="@dimen/margin"
            android:layout_toLeftOf="@id/diary_project_rec_mood" />

    </RelativeLayout>

</android.support.v7.widget.CardView>